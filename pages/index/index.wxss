.receiver-address-panel {
  position: relative;
  min-height: 100vh;
  background: #f5f5f5;
  overflow: auto;
  /* border: 1px red solid; */
}

.content-panel {
  margin-top: 20rpx;
  padding-bottom: 190rpx;
  /* border: 1px red solid; */
}

.has-line {
  margin: 0 30rpx;
  border-top: 1px solid #d2d2d2;
}

.list-layout {
  padding: 30rpx;
  position: relative;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-layout > .icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 60rpx;
  height: 60rpx;
}

.icon > image {
  width: 100%;
  height: 100%;
}

.list-layout > .item-left {
  width: 90%;
}

.list-layout >.item-left >.contact-info {
  text-overflow: ellipsis;
  font-family: AlibabaPuHuiTiR;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 0;
  text-align: left;
}

.list-layout >.item-left >.contact-info > .receiver-name {
  margin-right: 10rpx;
  flex: none;
  font-family: AlibabaPuHuiTiR;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 0;
  text-align: left;
}

.list-layout >.item-left >.contact-info >.receiver-tel {
  font-family: AlibabaPuHuiTiR;
  font-size: 32rpx;
  color: #333;
  letter-spacing: 0;
  text-align: left;
}

.list-layout >.item-left > .address-info > .specific-address {
  font-family: AlibabaPuHuiTiR;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 0;
  text-align: left;
  line-height: 35px;
}

.list-layout >.item-left > .address-info > .default-address {
  font-family: AlibabaPuHuiTiR;
  font-size: 22rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: left;
  background: rgb(252, 82, 86);
  line-height: 30rpx;
  display: inline-block;
  height: 30rpx;
  padding: 0 4rpx;
  margin-left: 6rpx;
	border-radius: 6rpx; 
}

.list-layout >.edit-address>image {
  width: 50rpx;
  height: 50rpx;
}

.receiver-address-panel > .no-address {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-address>image {
  width: 280rpx;
  height: 240rpx;
}

.receiver-address-panel > .add-address-bg {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100%;
  /* 这里就是使用sildeview的一个坑，sildeview默认的z-index值是10，如果你也想我一个需要在列表页面上方显示其他的内容，例如按钮，则需要设置z-index大于10才可以显示，否则无法显示 */
  z-index: 11; 
}

.receiver-address-panel > .add-address-bg >.add-address {
  border-radius: 10px;
  margin: 12rpx 20rpx;
  display: flex;
  justify-content: center;
  justify-items: center;
  background: #fff000;
}

.receiver-address-panel > .add-address-bg >.add-address>.add-address-desc {
  font-family: AlibabaPuHuiTiM;
  font-size: 32rpx;
  color: #000;
  letter-spacing: 0;
  text-align: left;
  margin: 20rpx auto;
}
